<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:paddingBottom="20dp"
        android:paddingRight="24dp"
        android:src="@drawable/ic_drawing"
        app:menu_backgroundColor="@color/black_a160"
        app:menu_extendedButtonTextExpanded="IM EXPANDED"
        app:menu_extendedButtonTextCollapsed="IM COLLAPSED"
        app:menu_fab_label="MENU 1"
        app:menu_labels_margin="20dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_normal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_star"
            app:fab_label="EXPENSE 1"
            app:fab_size="normal" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_normal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_star"
            app:fab_label="TRANSFER 1"
            app:fab_size="normal" />
    </com.github.clans.fab.FloatingActionMenu>

    <com.github.clans.fab.ExtendedFloatingActionMenu
        android:id="@+id/fabExtended"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:paddingBottom="20dp"
        android:paddingRight="24dp"
        android:src="@drawable/ic_drawing"
        app:menu_backgroundColor="@color/black_a160"
        app:menu_extendedButtonTextExpanded="IM EXPANDED"
        app:menu_extendedButtonTextCollapsed="IM COLLAPSED"
        app:menu_fab_label="MENU 2">

        <com.github.clans.fab.ExtendedFloatingActionButton
            android:id="@+id/menu_extended_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_star"
            app:fab_label="TRANSACTION 2 "
            app:fab_size="normal" />

        <com.github.clans.fab.ExtendedFloatingActionButton
            android:id="@+id/menu_extended_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_star"
            app:fab_label="TRANSFER  2"
            app:fab_size="normal" />
    </com.github.clans.fab.ExtendedFloatingActionMenu>

</FrameLayout>